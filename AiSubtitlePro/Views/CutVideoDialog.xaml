<Window x:Class="AiSubtitlePro.Views.CutVideoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Cut Video"
        Height="320" Width="520"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select cut range (non-destructive)"
                   FontSize="18" FontWeight="SemiBold" Margin="0,0,0,16" />

        <GroupBox Grid.Row="1" Header="Start" Margin="0,0,0,12">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Slider x:Name="StartSlider" Minimum="0" Maximum="100" Value="0" />
                    <TextBlock x:Name="StartText" Margin="0,6,0,0" Foreground="Gray" />
                </StackPanel>

                <Button Grid.Column="1" Content="Set = Current" Margin="12,0,0,0" Padding="10,0"
                        Height="28" Click="SetStartToCurrent_Click"
                        Style="{StaticResource ToolButtonStyle}" />
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="End" Margin="0,0,0,6">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Slider x:Name="EndSlider" Minimum="0" Maximum="100" Value="100" />
                        <TextBlock x:Name="EndText" Margin="0,6,0,0" Foreground="Gray" />
                    </StackPanel>

                    <Button Grid.Column="1" Content="Set = Current" Margin="12,0,0,0" Padding="10,0"
                            Height="28" Click="SetEndToCurrent_Click"
                            Style="{StaticResource ToolButtonStyle}" />
                </Grid>

                <CheckBox Grid.Row="1" x:Name="ToEndCheck" Content="To end of video" Margin="0,10,0,0"
                          Checked="ToEndCheck_Changed" Unchecked="ToEndCheck_Changed" />
            </Grid>
        </GroupBox>

        <TextBlock Grid.Row="3" x:Name="SummaryText" Foreground="White" Margin="0,0,0,12" />

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" IsCancel="True" Width="90" Margin="0,0,8,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />
            <Button x:Name="ApplyButton" Content="Apply" IsDefault="True" Width="90"
                    Click="ApplyButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </StackPanel>
    </Grid>
</Window>
