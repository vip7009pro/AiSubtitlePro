<Window x:Class="AiSubtitlePro.Views.OpenRouterApiKeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="OpenRouter API Key"
        Height="320" Width="520"
        MinHeight="320" MinWidth="520"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <DockPanel Margin="24">
        <Grid DockPanel.Dock="Bottom" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Cancel" Width="100" IsCancel="True"
                    Click="Cancel_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}" />

            <Button Grid.Column="2" Content="Save" Width="100" IsDefault="True"
                    Click="Save_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
        </Grid>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="OpenRouter API Key" FontSize="20" FontWeight="Bold" />
                <TextBlock Text="Your key is stored locally (AppData)." Foreground="Gray" Margin="0,4,0,12" />

                <TextBlock Text="API Key" Foreground="Gray" />
                <PasswordBox x:Name="ApiKeyBox" Margin="0,6,0,12" />

                <TextBlock Text="Model (optional)" Foreground="Gray" />
                <TextBox x:Name="ModelBox" Margin="0,6,0,0" Text="deepseek/deepseek-r1:free" />
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
