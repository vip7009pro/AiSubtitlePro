<Window x:Class="AiSubtitlePro.Views.CutVideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:AiSubtitlePro.Controls"
        Title="Cut Video"
        Width="1100"
        Height="760"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">

    <DockPanel LastChildFill="True">
        <Border DockPanel.Dock="Top" Padding="16" Background="{DynamicResource MaterialDesignPaper}" BorderBrush="#2A2A2A" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Cut Video" FontSize="22" FontWeight="SemiBold" />
                    <TextBlock x:Name="SummaryText" Margin="0,6,0,0" Foreground="Gray" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Current:" Foreground="Gray" VerticalAlignment="Center" Margin="0,0,6,0" />
                    <TextBlock x:Name="CurrentText" VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" CornerRadius="6" BorderBrush="#3F3F46" BorderThickness="1" Background="#101012">
                <controls:VideoPlayerControl x:Name="PreviewPlayer" />
            </Border>

            <Border Grid.Row="1" Margin="0,12,0,0" CornerRadius="6" BorderBrush="#3F3F46" BorderThickness="1" Background="{StaticResource SurfaceBrush}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="160" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <controls:WaveformControl x:Name="Waveform"
                                                 AudioPath="{Binding WaveformAudioPath}"
                                                 Position="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=CurrentAbs}"
                                                 Duration="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=MediaDurationAbs}"
                                                 Subtitles="{Binding DisplayedLines}" />
                        <Canvas x:Name="RangeOverlay" Background="Transparent"
                                Panel.ZIndex="10"
                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                MouseLeftButtonDown="RangeOverlay_MouseLeftButtonDown"
                                MouseMove="RangeOverlay_MouseMove"
                                MouseLeftButtonUp="RangeOverlay_MouseLeftButtonUp">
                            <Rectangle x:Name="RangeRect" Fill="#40FFB300" />
                            <Rectangle x:Name="StartHandle" Width="4" Fill="#FFC107" />
                            <Rectangle x:Name="EndHandle" Width="4" Fill="#FFC107" />
                        </Canvas>
                    </Grid>

                    <Grid Grid.Row="1" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Start" Foreground="Gray" VerticalAlignment="Center" />
                                <Slider x:Name="StartSlider" Grid.Column="1" Margin="10,0" />
                                <TextBlock x:Name="StartText" Grid.Column="2" Foreground="Gray" VerticalAlignment="Center" />
                            </Grid>

                            <Grid Margin="0,6,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="End" Foreground="Gray" VerticalAlignment="Center" />
                                <Slider x:Name="EndSlider" Grid.Column="1" Margin="18,0,10,0" />
                                <TextBlock x:Name="EndText" Grid.Column="2" Foreground="Gray" VerticalAlignment="Center" />
                            </Grid>

                            <CheckBox x:Name="ToEndCheck" Content="To end of video" Margin="0,8,0,0" />
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="12,0,0,0">
                            <Button Content="Set Start = Current" Padding="10,0" Height="28" Click="SetStartToCurrent_Click"
                                    Style="{StaticResource ToolButtonStyle}" Margin="0,0,8,0" />
                            <Button Content="Set End = Current" Padding="10,0" Height="28" Click="SetEndToCurrent_Click"
                                    Style="{StaticResource ToolButtonStyle}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Content="Cancel" IsCancel="True" Width="110" Margin="0,0,10,0"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
                <Button Content="OK" IsDefault="True" Width="110" Click="Ok_Click"
                        Style="{StaticResource MaterialDesignRaisedButton}" />
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
