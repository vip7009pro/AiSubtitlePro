<UserControl x:Class="AiSubtitlePro.Controls.WaveformControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Timeline Header with Time Markers -->
        <Canvas x:Name="TimeRulerCanvas" Grid.Row="0" Height="24" Background="#252526" />

        <!-- Waveform Display -->
        <Grid Grid.Row="1">
            <Canvas x:Name="WaveformCanvas" Background="#1E1E1E" ClipToBounds="True" />
            
            <!-- Subtitle Markers Layer -->
            <Canvas x:Name="SubtitleMarkersCanvas" ClipToBounds="True" />
            
            <!-- Playhead -->
            <Canvas x:Name="PlayheadCanvas" ClipToBounds="True">
                <Line x:Name="PlayheadLine" 
                      Y1="0" Y2="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"
                      Stroke="#00BCD4" StrokeThickness="2" />
            </Canvas>

            <!-- No Audio Overlay -->
            <Border x:Name="NoAudioOverlay" Background="#AA1E1E1E">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Waveform" Width="48" Height="48" 
                                            Foreground="Gray" HorizontalAlignment="Center" />
                    <TextBlock Text="Waveform will appear when media is loaded" 
                              Foreground="Gray" FontSize="13" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
